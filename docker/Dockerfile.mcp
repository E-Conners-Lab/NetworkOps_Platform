# =============================================================================
# NetworkOps MCP Server
# AI-Powered Network Automation via Model Context Protocol
# =============================================================================

FROM python:3.11-slim

LABEL maintainer="NetworkOps <support@networkops.io>"
LABEL description="NetworkOps MCP Server - Multi-vendor network automation with AI"
LABEL version="1.0.0"

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    openssh-client \
    curl \
    iputils-ping \
    git \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash networkops

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY --chown=networkops:networkops . .

# Create data directories with proper permissions
RUN mkdir -p /app/data /app/baselines /app/data/backups /app/data/chromadb && \
    chown -R networkops:networkops /app/data /app/baselines

# Set environment defaults
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV MEMORY_ENABLE_SEMANTIC=true
ENV MEMORY_AUTO_PRUNE=true

# Switch to non-root user
USER networkops

# Expose no ports - MCP uses stdio for communication
# The server is invoked by Claude Code, not accessed via HTTP

# Health check (checks Python and imports)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "from network_mcp_async import mcp; print('OK')" || exit 1

# Default command
CMD ["python", "network_mcp_async.py"]
